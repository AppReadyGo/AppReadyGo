@using AppReadyGo.Helpers;
@model AppReadyGo.Model.Pages.Application.ApplicationDetailsModel

@Html.HiddenFor(m => m.Id)
<p>
    @Html.LabelFor(m => m.Name)<br> 
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "error" })
</p>
<p>
    @Html.LabelFor(m => m.Description)<br> 
    @Html.TextAreaFor(m => m.Description)
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "error" })
</p>
<p>
    @Html.LabelFor(m => m.Type)<br> 
    @Html.DropDownListFor(m => m.Type, Model.Types)
    @Html.ValidationMessageFor(m => m.Type, null, new { @class = "error" })
</p>
<p>
    <label>Icon</label><br> 
    <input type="file" name="icon_file" />
    @Html.ValidationMessage("Icon", null, new { @class = "error" })
</p>
<p>
    <label>Screen 1</label><br> 
    <input type="file" name="sreen_file_1" />
</p>
<p>
    <label>Screen 2</label><br> 
    <input type="file" name="sreen_file_2" />
</p>
<p>
    <label>Screen 3</label><br> 
    <input type="file" name="sreen_file_3" />
</p>
<p>
    <label>Screen 4</label><br> 
    <input type="file" name="sreen_file_4" />
</p>
<p>
    <label>Screen 5</label><br> 
    <input type="file" name="sreen_file_5" />
</p>
<p>
    <label>Package</label><br> 
    <input type="file" name="package_file" />
</p>
<p class="submit">
    @Html.ValidationSummary(true, null, new { @class = "error" })
    <input type="submit" value="Save" class="button green medium"/>
    <input type="submit" value="Publish" class="button green medium"/>
</p>