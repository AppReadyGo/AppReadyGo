@using AppReadyGo.Helpers;
@using AppReadyGo.Model.Pages.Application;
@model ScreenModel
@{
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}
@section title { Add Screen }
@section header 
{
    <link href="@Url.Content("~/Content/shared/form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/application.screennew.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/shared/bredcrumbs.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/scripts/application.screen.js")" type="text/javascript"></script>
}
<div class="crumb">
    <div class="border-right">
		<div class="border-left">
			<div class="inner">
                <ul>
		           <li><a href="/Application"><h4>Applications</h4></a></li>
		           <li><a href="/Application/Screens/@Model.ApplicationId"><h4>@ViewBag.ApplicationDescription - Screens</h4></a></li>
		           <li><h4>Add Screen</h4></li>
		        </ul>
			</div>
		</div>
    </div>
</div>
<div style="clear:both;"></div>
<div class="content-wrapper">
    <article class="center">
        <div class="form-wrapper">
            <form action="" method="post" enctype="multipart/form-data">
            @Html.Partial("Forms/ScreenForm", Model)
            </form>
        </div>
    </article>
</div>


