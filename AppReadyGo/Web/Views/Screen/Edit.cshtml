@using AppReadyGo.Helpers;
@using AppReadyGo.Model.Pages.Application;
@model EditScreenModel
@{
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}
@section title { Edit Screen }
@section header 
{
    <link rel="stylesheet" href="@Url.Content("~/ThridParty/fancyBox-v2.1.4/jquery.fancybox.css")" type="text/css" media="screen" />
    <script type="text/javascript" src="@Url.Content("~/ThridParty/fancyBox-v2.1.4/jquery.fancybox.pack.js")"></script>
    
    
    <script src="@Url.Content("~/scripts/application.screen.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/shared/form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/application.screen.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/after.login.master.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/shared/bredcrumbs.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/scripts/application.screen.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.screen a').fancybox();
        });
    </script>
}
<div class="crumb">
    <div class="border-right">
		<div class="border-left">
			<div class="inner">
                <ul>
		           <li><a href="/Application"><h4>Applications</h4></a></li>
		           <li><a href="/Application/@Model.ApplicationId/Screen"><h4>@ViewBag.ApplicationDescription - Screens</h4></a></li>
		           <li><h4>Edit Screen</h4></li>
		        </ul>
			</div>
		</div>
    </div>
</div>
<div style="clear:both;"></div>
<div class="content-wrapper">
    <article class="center">
        <div class="form-wrapper">
            <header>
                <h1>Edit screen</h1>
            </header>
            <div class="screen">
                <a href="/Application/@Model.ApplicationId/Screen/Image/@Model.Id/@Model.FileName">
                    <img width="320" src="/Application/@Model.ApplicationId/Screen/Image/@Model.Id/@Model.FileName"/>
                </a>
            </div>
            <div class="sub-wrapper">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.Partial("Forms/ScreenForm", Model)
            }
            </div>
        </div>
    </article>
</div>


