@model AppReadyGo.Model.Pages.Account.ResetPasswordModel
@{
    Layout = "~/Views/Shared/_BeforeLogin.cshtml";
}
@section title { Reset Password }
@section header { }
<section id="content">
    <div class="content-wrapper">
        <article class="center">
            <div class="form-wrapper">
                <h2>Reset Password</h2>
                @using (Html.BeginForm(null, null, new { key = Model.Key }, FormMethod.Post, new { autocomplete = "off" }))
                {
                    <p class="desc">
                       Use the form below to reset your password. <br />New passwords are required to be a minimum of 7 characters in length.
                    </p>
                    <p>
                        @Html.LabelFor(m => m.NewPassword)<br> 
                        @Html.PasswordFor(m => m.NewPassword, new { autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "error" })
                    </p>
                    <p>
                        @Html.LabelFor(m => m.ConfirmPassword)<br> 
                        @Html.PasswordFor(m => m.ConfirmPassword, new { autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "error" })
                        @Html.ValidationSummary(true, null, new { @class = "error" })
                    </p>
                    <p class="submit">
	                    <input type="submit" value="Reset Password" class="button green medium"/>
                    </p>
                }
            </div>
        </article>
    </div>
</section>
