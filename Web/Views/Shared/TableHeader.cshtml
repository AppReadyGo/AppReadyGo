@using AppReadyGo.Helpers;
@model AppReadyGo.Web.Model.Shared.TableModel
<div class="t-nav">
	<div class="a-l search-box">
		<input type="search" id="search-input" name="s" value="@Model.SearchStr" />
        <a class="link2" onclick="javascript: document.location.href = '@Model.BaseUrlPart/?cp=1&srch=' + escape($('#search-input').val());"><span><span>Search</span></span></a>
	</div>
	<div class='t-nav-pages @(Model.IsOnePage ? "one-page" : "")'>
		<span class="d-num">@Model.Count items</span>
		<span class='pagination-links'>
			<a class='first-page @(Model.IsOnePage ? "disabled" : "")' title='Go to the first page' href='@Model.BaseUrlPart/?cp=1@Model.UrlPart'>&laquo;</a>
			<a class='prev-page @(Model.PreviousPage.HasValue ? "" : "disabled")' title='Go to the previous page' href='@Model.BaseUrlPart/?cp=@(Model.PreviousPage.HasValue ? Model.PreviousPage.Value : 1)@Model.UrlPart'>&lsaquo;</a>
			<span class="paging-input">
				<input class='cur-p' title='Current page' type='text' name='paged' value='@Model.CurPage' size='1' /> of <span class='total-pages'>@Model.TotalPages</span>
			</span>
			<a class='next-page @(Model.NextPage.HasValue ? "" : "disabled")' title='Go to the next page' href='@Model.BaseUrlPart/?cp=@(Model.NextPage.HasValue ? Model.NextPage.Value : Model.TotalPages)@Model.UrlPart'>&rsaquo;</a>
			<a class='last-page @(Model.IsOnePage ? "disabled" : "")' title='Go to the last page' href='@Model.BaseUrlPart/?cp=@(Model.TotalPages)@Model.UrlPart'>&raquo;</a>
		</span>
	</div>
</div><!-- /t-nav -->