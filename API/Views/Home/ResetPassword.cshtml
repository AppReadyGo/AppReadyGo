@model AppReadyGo.API.Models.ResetPasswordModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title { @Model.Title }
<section id="content">
    <div class="content-wrapper">
        <div class="form-wrapper">
            <header>
                <h1>Reset Password</h1>
                <h2>Use the form below to reset your password. <br />New passwords are required to be a minimum of 7 characters in length.</h2>
            </header>
            <div class="sub-wrapper">
            @using (Html.BeginForm(null, null, new { key = Model.Key }, FormMethod.Post, new { autocomplete = "off" }))
            {
                <p class="required">
                    @Html.LabelFor(m => m.NewPassword)<br> 
                    @Html.PasswordFor(m => m.NewPassword, new { autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "error" })
                </p>
                <p class="required">
                    @Html.LabelFor(m => m.ConfirmPassword)<br> 
                    @Html.PasswordFor(m => m.ConfirmPassword, new { autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "error" })
                    @Html.ValidationMessage("error", new { @class = "error" })
                </p>
                <p class="actions">
	                <input type="submit" value="Reset Password" class="button green medium"/>
                </p>
            }
            </div>
        </div>
    </div><!-- /.content-wrapper --> 
    <p class="clear"></p>
</section><!-- /#content --> 


